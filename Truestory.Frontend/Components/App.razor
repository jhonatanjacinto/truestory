<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="@Assets["app.css"]" />
    <ImportMap />
    <HeadOutlet />
</head>

<body class="bg-gray-200">
    <Routes />
    <script src="_framework/blazor.web.js"></script>
    <script>
        document.addEventListener('click', function (event) {
            if (!event.target.matches('.btn-add-item')) return;
            event.preventDefault();
            const dataItemsContainer = document.querySelector('.data-items');
            const newItem = document.createElement('div');
            newItem.className = 'data-item flex items-center mb-2 gap-[10px]';
            newItem.innerHTML = `
                <input type="text" class="form-control mr-2" name="keys[]" placeholder="Key" />
                <input type="text" class="form-control" name="values[]" placeholder="Value" />
            `;
            dataItemsContainer.appendChild(newItem);
        });
    </script>
</body>

</html>
